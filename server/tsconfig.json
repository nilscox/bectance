{
  "include": ["./src/**/*"],
  "references": [{ "path": "../shared" }],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@bectance/shared/dtos": ["../shared/src/dtos.ts"],
      "@bectance/shared/utils": ["../shared/src/utils.ts"]
    }
  }
}
